{
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "stripInternal": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "storybook-static",
    "coverage",
    "jest.config.js",
    "**/*.test.tsx",
    "**/*.stories.mdx",
    "**/*.stories.@(js|jsx|ts|tsx)"
  ]
}
